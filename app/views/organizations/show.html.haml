.col-md-12
	%h1= @organization.login
	%p= @organization.description

	%p
		There is #{ @organization.members.count } members

	%ul.nav.nav-tabs
		%li.active
			%a{"data-toggle" => "tab", :href => "#1"} 
				Recent Activities
		%li
			%a{"data-toggle" => "tab", :href => "#2"} 
				Graphs
		%li
			%a{"data-toggle" => "tab", :href => "#3"} 
				Members
	.well-two
		.tab-content{style: "margin-bottom: 2%"}
			#1.tab-pane.active
				%p first
			#2.tab-pane
				%p second
			#3.tab-pane
				- @organization.members.each do |member|
					.member.col-md-3
						.panel.panel-default
							.panel-heading
								= member.login
							.panel-body
								= image_tag( member.avatar_url, size: '50' )
