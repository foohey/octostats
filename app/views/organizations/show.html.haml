.col-md-12

	%ol.breadcrumb
		%li=link_to 'Dashboard', root_path
		%li.active= @organization.login

	%h1= @organization.login
	%p= @organization.description

	%ul.nav.nav-tabs
		%li.active
			%a{"data-toggle" => "tab", :href => "#4"}
				Repositories (#{ @organization.repositories.count })
		%li
			%a{"data-toggle" => "tab", :href => "#3"}
				Members (#{ @organization.members.count })
		%li
			%a{"data-toggle" => "tab", :href => "#1"}
				Graphs
		%li
			%a{"data-toggle" => "tab", :href => "#2"}
				Recent Activities
	.well-two
		.tab-content{style: "margin-bottom: 2%"}
			#1.tab-pane
				.col-sm-3
					.sidebar-nav
						.navbar.navbar-default
							.navbar-header
								%button.navbar-toggle{:type => "button", data:{toggle: "collapse", target: ".sidebar-navbar-collapse"} }
									%span.sr-only
										Toggle navigation
									%span.icon-bar
									%span.icon-bar
									%span.icon-bar

								%span.navbar-brand
									%a{:href => "#"}
										Graph Categories
							.navbar-collapse.collapse.sidebar-navbar-collapse
								%ul.nav.navbar-nav
									%li
										%a{:href => "#"}
											Contributors
									%li
										%a{:href => "#"}
											Commits
									%li
										%a{:href => "#"}
											Code Frequencies
									%li
										%a{:href => "#"}
											Punch Cards
									%li
										%a{:href => "#"}
											Networks
									%li
										%a{:href => "#"}
											Members
				.col-sm-9
					Insert graphs here
			#2.tab-pane
				Second
			#3.tab-pane
				- @organization.members.each do |member|
					%a{ href: organization_member_path( @organization.login, member.login ) }
						.member.col-md-2
							.panel.panel-default
								.panel-heading
									%span.octicon.octicon-person
									= member.login
								.panel-body
									= image_tag( member.avatar_url, size: '50' )
			#4.tab-pane.active
				- @organization.repositories.each do |repository|
					.repository.col-md-2
						.panel.panel-default
							.panel-body
								.head
									%span.octicon.octicon-repo
									= repository.name
								.description
									= repository.description
